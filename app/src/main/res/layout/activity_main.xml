<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <include android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/player"
             tools:layout_editor_absoluteY="0dp" android:id="@+id/plr1"
             app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <include android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/player"
             app:layout_constraintTop_toBottomOf="@+id/plr1" android:id="@+id/plr2"
             android:layout_marginTop="5dp" app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"/>
    <include android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/player"
             android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/plr2"
             android:id="@+id/plr3" app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"/>
    <include android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/player"
             android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/plr3"
             app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
             android:id="@+id/plr4"/>
</android.support.constraint.ConstraintLayout>