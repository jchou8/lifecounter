<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:layout_marginBottom="6dp">
    <TextView
            android:layout_height="0dp"
            android:id="@+id/txt_life" android:text="@string/initial_health" android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="80dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_plr"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginRight="8dp"/>
    <Button
            android:text="@string/btn_incr"
            android:layout_width="44dp"
            android:layout_height="0dp"
            android:id="@+id/btn_incr"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <Button
            android:text="@string/btn_decr"
            android:layout_width="44dp"
            android:layout_height="0dp"
            android:id="@+id/btn_decr"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="40dp" android:layout_marginRight="40dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="@string/btn_decr5"
            android:layout_width="44dp"
            android:layout_height="0dp"
            android:id="@+id/btn_decr5"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="90dp" android:layout_marginRight="90dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="@string/btn_incr5"
            android:layout_width="44dp"
            android:layout_height="0dp"
            android:id="@+id/btn_incr5"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/player"
            android:layout_height="0dp"
            android:id="@+id/txt_plr" android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline3"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent=".5"
            android:id="@+id/guideline3"/>
</android.support.constraint.ConstraintLayout>