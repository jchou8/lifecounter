<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <TextView
            android:layout_height="43dp"
            android:id="@+id/txt_life" android:text="@string/initial_health" android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center" android:layout_marginTop="3dp" app:layout_constraintTop_toBottomOf="@+id/txt_plr"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="181dp"
            android:layout_marginRight="181dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="182dp" android:layout_marginStart="182dp"
            android:layout_width="wrap_content"/>
    <Button
            android:text="@string/btn_incr"
            android:layout_width="44dp"
            android:layout_height="43dp"
            android:id="@+id/btn_incr"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/txt_life" android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_plr"/>
    <Button
            android:text="@string/btn_decr"
            android:layout_width="44dp"
            android:layout_height="43dp"
            android:id="@+id/btn_decr"
            app:layout_constraintEnd_toStartOf="@+id/txt_life"
            android:layout_marginEnd="10dp" android:layout_marginRight="10dp" android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_plr"/>
    <Button
            android:text="@string/btn_decr5"
            android:layout_width="44dp"
            android:layout_height="43dp"
            android:id="@+id/btn_decr5"
            app:layout_constraintEnd_toStartOf="@+id/btn_decr"
            android:layout_marginEnd="10dp" android:layout_marginRight="10dp" android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_plr"/>
    <Button
            android:text="@string/btn_incr5"
            android:layout_width="44dp"
            android:layout_height="43dp"
            android:id="@+id/btn_incr5"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/btn_incr" android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_plr"/>
    <TextView
            android:text="@string/player"
            android:layout_height="wrap_content"
            android:id="@+id/txt_plr" android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="186dp" android:layout_marginStart="186dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="186dp"
            android:layout_marginRight="186dp" android:layout_width="wrap_content"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="209dp" android:id="@+id/guideline"/>
</android.support.constraint.ConstraintLayout>